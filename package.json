{
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"test": "vitest",
		"test:ci": "vitest run",
		"test:ui": "vitest ui",
		"test:ui:ci": "vitest run ui",
		"test:core": "vitest core",
		"test:core:ci": "vitest run core",
		"coverage": "vitest run --coverage",
		"build:docs": "ng build --project docs",
		"build:ui": "npm run build:core && ng build --project ui",
		"build:core": "ng build --project core",
		"build": "npm run build:ui && npm run build:docs",
		"build:css": "npx @tailwindcss/cli -i packages/docs/tailwind.css -o packages/themes/default/style.css",
		"watch:ui": "ng build --watch --project ui",
		"watch:css": "npx @tailwindcss/cli -i packages/docs/tailwind.css -o packages/themes/default/style.css --watch",
		"publish": "npm run build:ui && cd dist/ui && npm publish",
		"sync": "npm run build:ui && npm update tailwind-ng@file:dist/tailwind-ng && npm start",
		"lint:ui": "ng lint --project ui",
		"lint:core": "ng lint --project core",
		"lint:docs": "ng lint --project docs",
		"lint": "npx run-p lint:ui lint:core lint:docs",
		"check-circ-deps:core": "npx dpdm --tree false --ext .ts packages/core/src/* --exclude ^@angular/core$",
		"check-circ-deps:ui": "npx dpdm --tree false --ext .ts packages/ui/src/* --exclude ^@angular/core$",
		"check-circ-deps:docs": "npx dpdm --tree false --ext .ts packages/docs/src/* --exclude ^@angular/core$",
		"check-circ-deps": "npm run check-circ-deps:core && npm run check-circ-deps:ui && npm run check-circ-deps:docs",
		"checkup": "npm run check-circ-deps && npm run cleanup && npm run lint && npm run build && npm run test:ci",
		"cleanup-imports": "ng generate @angular/core:cleanup-unused-imports",
		"prepare": "husky",
		"format:check": "npx prettier . --check",
		"format:fix": "npx prettier . --write"
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "^19.2.6",
		"@angular/common": "^19.2.6",
		"@angular/compiler": "^19.2.6",
		"@angular/core": "^19.2.6",
		"@angular/forms": "^19.2.6",
		"@angular/platform-browser": "^19.2.6",
		"@angular/platform-browser-dynamic": "^19.2.6",
		"@angular/router": "^19.2.6",
		"rxjs": "~7.8.2",
		"tailwindcss": "4.0.0",
		"tslib": "^2.8.1",
		"zone.js": "~0.15.0"
	},
	"devDependencies": {
		"@analogjs/vite-plugin-angular": "^1.16.0",
		"@angular-devkit/build-angular": "^19.2.7",
		"@angular/cli": "^19.2.7",
		"@angular/compiler-cli": "^19.2.6",
		"@eslint/js": "^9.24.0",
		"@tailwindcss/cli": "4.0.0",
		"@vitest/coverage-v8": "^3.1.3",
		"@vitest/ui": "^3.1.3",
		"angular-eslint": "19.0.2",
		"dpdm": "^3.14.0",
		"globals": "^15.15.0",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"lint-staged": "^15.5.1",
		"ng-packagr": "^19.2.2",
		"npm-run-all": "^4.1.5",
		"prettier": "3.5.3",
		"shiki": "^2.5.0",
		"typescript": "~5.7.3",
		"typescript-eslint": "8.18.0",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.1.3"
	},
	"lint-staged": {
		"**/*": "prettier --write --ignore-unknown"
	},
	"engines": {
		"node": ">=16 <23",
		"npm": ">=10"
	},
	"engineStrict": true
}

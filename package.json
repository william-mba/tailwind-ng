{
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"test": "vitest",
		"test:ui": "vitest ui",
		"test:ui:ci": "vitest run ui",
		"test:core": "vitest core",
		"test:core:ci": "vitest run core",
		"coverage": "vitest run --coverage",
		"build:lib-docs": "ng build --project tailwind-ng-docs",
		"build:lib": "npm run build:lib-core && ng build --project tailwind-ng",
		"build:lib-core": "ng build --project tailwind-ng-core",
		"build:all": "npm run build:lib && npm run build:lib-docs",
		"build:css": "npx @tailwindcss/cli -i projects/tailwind-ng-docs/tailwind.css -o projects/tailwind-ng-themes/default/style.css",
		"watch:lib": "ng build --watch --project ngx-tailwind",
		"watch:css": "npx @tailwindcss/cli -i projects/tailwind-ng-docs/tailwind.css -o projects/tailwind-ng-themes/default/style.css --watch",
		"publish": "npm run build:lib && cd dist/ngx-tailwind && npm publish",
		"sync": "npm run build:lib && npm update tailwind-ng@file:dist/tailwind-ng && npm start",
		"lint:lib": "ng lint --project tailwind-ng",
		"lint:lib-core": "ng lint --project tailwind-ng-core",
		"lint:lib-docs": "ng lint --project tailwind-ng-docs",
		"lint:all": "npm run lint:lib-core && npm run lint:lib && npm run lint:lib-docs",
		"lint": "ng lint",
		"deps:check:core": "npx dpdm --tree false --ext .ts projects/tailwind-ng-core/src/* --exclude ^@angular/core$",
		"deps:check:ui": "npx dpdm --tree false --ext .ts projects/tailwind-ng/src/* --exclude ^@angular/core$",
		"deps:check:docs": "npx dpdm --tree false --ext .ts projects/tailwind-ng-docs/src/* --exclude ^@angular/core$",
		"deps:check:all": "npm deps:check:core && npm deps:check:ui && npm deps:check:docs",
		"checkup": "npm deps:check:all && npm cleanup && npm run lint:all && npm run build:all && npm run test:all:ci",
		"cleanup": "ng generate @angular/core:cleanup-unused-imports",
		"install-chrome": "npx puppeteer browsers install chrome@131.0.6778.204",
		"prepare": "husky",
		"format:check": "npx prettier . --check",
		"format:fix": "npx prettier . --write"
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "^19.2.6",
		"@angular/common": "^19.2.6",
		"@angular/compiler": "^19.2.6",
		"@angular/core": "^19.2.6",
		"@angular/forms": "^19.2.6",
		"@angular/platform-browser": "^19.2.6",
		"@angular/platform-browser-dynamic": "^19.2.6",
		"@angular/router": "^19.2.6",
		"rxjs": "~7.8.2",
		"tailwindcss": "4.0.0",
		"tslib": "^2.8.1",
		"zone.js": "~0.15.0"
	},
	"devDependencies": {
		"@analogjs/vite-plugin-angular": "^1.16.0",
		"@angular-devkit/build-angular": "^19.2.7",
		"@angular/cli": "^19.2.7",
		"@angular/compiler-cli": "^19.2.6",
		"@eslint/js": "^9.24.0",
		"@tailwindcss/cli": "4.0.0",
		"@vitest/coverage-v8": "^3.1.3",
		"@vitest/ui": "^3.1.3",
		"angular-eslint": "19.0.2",
		"dpdm": "^3.14.0",
		"globals": "^15.15.0",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"lint-staged": "^15.5.1",
		"ng-packagr": "^19.2.2",
		"npm-run-all": "^4.1.5",
		"prettier": "3.5.3",
		"shiki": "^2.5.0",
		"typescript": "~5.7.3",
		"typescript-eslint": "8.18.0",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.1.3"
	},
	"lint-staged": {
		"**/*": "prettier --write --ignore-unknown"
	},
	"engines": {
		"node": ">=16 <23",
		"npm": ">=10"
	},
	"engineStrict": true
}

{
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "test:lib-docs": "ng test --project tailwind-ng-docs",
    "test:lib": "ng test --project tailwind-ng",
    "test:lib-core": "ng test --project tailwind-ng-core",
    "test:lib:ci": "ng test --project tailwind-ng --no-watch --no-progress --karma-config projects/tailwind-ng/karma.conf.js --code-coverage",
    "test:lib-core:ci": "ng test --project tailwind-ng-core --no-watch --no-progress --karma-config projects/tailwind-ng-core/karma.conf.js --code-coverage",
    "test:lib-docs:ci": "ng test --project tailwind-ng-docs --no-watch --no-progress --karma-config projects/tailwind-ng-docs/karma.conf.js --code-coverage",
    "test:all": "pnpm test:lib-core && pnpm test:lib && pnpm test:lib-docs",
    "test:all:ci": "pnpm test:lib-core:ci && pnpm test:lib:ci && pnpm test:lib-docs:ci",
    "build:lib-docs": "ng build --project tailwind-ng-docs",
    "build:lib": "pnpm build:lib-core && ng build --project tailwind-ng",
    "build:lib-core": "ng build --project tailwind-ng-core",
    "build:all": "pnpm build:lib && pnpm build:lib-docs",
    "build:css": "npx @tailwindcss/cli -i projects/tailwind-ng-docs/tailwind.css -o projects/tailwind-ng-themes/default/style.css",
    "watch:lib": "ng build --watch --project ngx-tailwind",
    "watch:css": "npx @tailwindcss/cli -i projects/tailwind-ng-docs/tailwind.css -o projects/tailwind-ng-themes/default/style.css --watch",
    "publish": "pnpm build:lib && cd dist/ngx-tailwind && npm publish",
    "sync": "pnpm build:lib && pnpm update tailwind-ng@file:dist/tailwind-ng && pnpm start",
    "lint:lib": "ng lint --project tailwind-ng",
    "lint:lib-core": "ng lint --project tailwind-ng-core",
    "lint:lib-docs": "ng lint --project tailwind-ng-docs",
    "lint:all": "pnpm lint:lib-core && pnpm lint:lib && pnpm lint:lib-docs",
    "lint": "ng lint",
    "deps:check:core": "pnpx dpdm --tree false --ext .ts projects/tailwind-ng-core/src/* --exclude ^@angular/core$",
    "deps:check:ui": "pnpx dpdm --tree false --ext .ts projects/tailwind-ng/src/* --exclude ^@angular/core$",
    "deps:check:app": "pnpx dpdm --tree false --ext .ts projects/tailwind-ng-docs/src/* --exclude ^@angular/core$",
    "deps:check:all": "pnpm deps:check:core && pnpm deps:check:ui && pnpm deps:check:app",
    "checkup": "pnpm deps:check:all && pnpm cleanup && pnpm lint:all && pnpm build:all && pnpm test:all:ci",
    "cleanup": "ng generate @angular/core:cleanup-unused-imports",
    "install-chrome": "pnpx puppeteer browsers install chrome@131.0.6778.204"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.1.6",
    "@angular/common": "^19.1.6",
    "@angular/compiler": "^19.1.6",
    "@angular/core": "^19.1.6",
    "@angular/forms": "^19.1.6",
    "@angular/platform-browser": "^19.1.6",
    "@angular/platform-browser-dynamic": "^19.1.6",
    "@angular/router": "^19.1.6",
    "rxjs": "~7.8.1",
    "tailwindcss": "4.0.0",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.1.7",
    "@angular/cli": "^19.1.7",
    "@angular/compiler-cli": "^19.1.6",
    "@eslint/js": "^9.20.0",
    "@tailwindcss/cli": "4.0.0",
    "@types/jasmine": "~5.1.5",
    "angular-eslint": "19.0.2",
    "clean-css": "^5.3.3",
    "dpdm": "^3.14.0",
    "eslint": "^9.20.1",
    "globals": "^15.15.0",
    "jasmine-core": "~5.4.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "karma-junit-reporter": "^2.0.1",
    "ng-packagr": "^19.1.2",
    "npm-run-all": "^4.1.5",
    "puppeteer": "^23.11.1",
    "shiki": "^2.3.2",
    "typescript": "~5.7.3",
    "typescript-eslint": "8.18.0"
  },
  "packageManager": "pnpm@10.0.0+sha512.b8fef5494bd3fe4cbd4edabd0745df2ee5be3e4b0b8b08fa643aa3e4c6702ccc0f00d68fa8a8c9858a735a0032485a44990ed2810526c875e416f001b17df12b"
}
{
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"test:lib-docs": "ng test --project tailwind-ng-docs",
		"test:lib": "ng test --project tailwind-ng",
		"test:lib-core": "ng test --project tailwind-ng-core",
		"test:lib:ci": "ng test --project tailwind-ng --no-watch --no-progress --karma-config projects/tailwind-ng/karma.conf.js --code-coverage",
		"test:lib-core:ci": "ng test --project tailwind-ng-core --no-watch --no-progress --karma-config projects/tailwind-ng-core/karma.conf.js --code-coverage",
		"test:lib-docs:ci": "ng test --project tailwind-ng-docs --no-watch --no-progress --karma-config projects/tailwind-ng-docs/karma.conf.js --code-coverage",
		"test:all": "npm test:lib-core && npm test:lib && npm test:lib-docs",
		"test:all:ci": "npm test:lib-core:ci && npm test:lib:ci && npm test:lib-docs:ci",
		"build:lib-docs": "ng build --project tailwind-ng-docs",
		"build:lib": "npm build:lib-core && ng build --project tailwind-ng",
		"build:lib-core": "ng build --project tailwind-ng-core",
		"build:all": "npm build:lib && npm build:lib-docs",
		"build:css": "npx @tailwindcss/cli -i projects/tailwind-ng-docs/tailwind.css -o projects/tailwind-ng-themes/default/style.css",
		"watch:lib": "ng build --watch --project ngx-tailwind",
		"watch:css": "npx @tailwindcss/cli -i projects/tailwind-ng-docs/tailwind.css -o projects/tailwind-ng-themes/default/style.css --watch",
		"publish": "npm build:lib && cd dist/ngx-tailwind && npm publish",
		"sync": "npm build:lib && npm update tailwind-ng@file:dist/tailwind-ng && npm start",
		"lint:lib": "ng lint --project tailwind-ng",
		"lint:lib-core": "ng lint --project tailwind-ng-core",
		"lint:lib-docs": "ng lint --project tailwind-ng-docs",
		"lint:all": "npm lint:lib-core && npm lint:lib && npm lint:lib-docs",
		"lint": "ng lint",
		"deps:check:core": "npx dpdm --tree false --ext .ts projects/tailwind-ng-core/src/* --exclude ^@angular/core$",
		"deps:check:ui": "npx dpdm --tree false --ext .ts projects/tailwind-ng/src/* --exclude ^@angular/core$",
		"deps:check:docs": "npx dpdm --tree false --ext .ts projects/tailwind-ng-docs/src/* --exclude ^@angular/core$",
		"deps:check:all": "npm deps:check:core && npm deps:check:ui && npm deps:check:docs",
		"checkup": "npm deps:check:all && npm cleanup && npm lint:all && npm build:all && npm test:all:ci",
		"cleanup": "ng generate @angular/core:cleanup-unused-imports",
		"install-chrome": "npx puppeteer browsers install chrome@131.0.6778.204",
		"prepare": "husky",
		"format:check": "npx prettier . --check",
		"format:fix": "npx prettier . --write"
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "^19.2.6",
		"@angular/common": "^19.2.6",
		"@angular/compiler": "^19.2.6",
		"@angular/core": "^19.2.6",
		"@angular/forms": "^19.2.6",
		"@angular/platform-browser": "^19.2.6",
		"@angular/platform-browser-dynamic": "^19.2.6",
		"@angular/router": "^19.2.6",
		"rxjs": "~7.8.2",
		"tailwindcss": "4.0.0",
		"tslib": "^2.8.1",
		"zone.js": "~0.15.0"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^19.2.7",
		"@angular/cli": "^19.2.7",
		"@angular/compiler-cli": "^19.2.6",
		"@eslint/js": "^9.24.0",
		"@tailwindcss/cli": "4.0.0",
		"@types/jasmine": "~5.1.7",
		"angular-eslint": "19.0.2",
		"clean-css": "^5.3.3",
		"dpdm": "^3.14.0",
		"globals": "^15.15.0",
		"husky": "^9.1.7",
		"jasmine-core": "~5.4.0",
		"karma": "~6.4.4",
		"karma-chrome-launcher": "~3.2.0",
		"karma-coverage": "~2.2.1",
		"karma-jasmine": "~5.1.0",
		"karma-jasmine-html-reporter": "~2.1.0",
		"karma-junit-reporter": "^2.0.1",
		"lint-staged": "^15.5.1",
		"ng-packagr": "^19.2.2",
		"npm-run-all": "^4.1.5",
		"prettier": "3.5.3",
		"puppeteer": "^23.11.1",
		"shiki": "^2.5.0",
		"typescript": "~5.7.3",
		"typescript-eslint": "8.18.0"
	},
	"lint-staged": {
		"**/*": "prettier --write --ignore-unknown"
	}
}
